<UserControl x:Class="MyFirstProject.Views.ShowValueExtension"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:MyFirstProject.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:ShowValueExtensionViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <StackPanel>
            <TextBlock Text="Enter Some Value" />
            <TextBox Text="{Binding Value,UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Solve" Command="{Binding SolveCommand}" Style="{StaticResource MahApps.Styles.Button}" />
        </StackPanel>
    </Grid>
</UserControl>