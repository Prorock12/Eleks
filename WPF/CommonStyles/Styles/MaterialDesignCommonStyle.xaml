<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="BaseListBoxStyle" TargetType="ListBox">
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="BaseStackPanelStyle" TargetType="{x:Type StackPanel}">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}" />
    </Style>

    <Style TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
    </Style>

    <!--<Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MaterialDesignSubtitle2TextBlock}" />-->

    <!--<Style x:Key="BaseBorderStyle" TargetType="{x:Type Border}" BasedOn="{StaticResource MaterialDesignToolBarMainPanelBorderStyle}" />-->
</ResourceDictionary>